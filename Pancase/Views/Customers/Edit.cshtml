@model Pancase.Models.UpdateCustomerViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ssn" class="control-label"></label>
                <input asp-for="Ssn" class="form-control" />
                <span asp-validation-for="Ssn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div id="EmploymentType" class="form-group">
                @Html.LabelFor(m => m.EmploymentType, "Employment Type")
                @Html.DropDownListFor(m => m.EmploymentType, Model.EmploymentTypeList, new { @class = "form-control" })
            </div>
            <div id="EmploymentTypeNotes" class="form-group">
                <label asp-for="EmploymentTypeNotes" class="control-label"></label>
                <input asp-for="EmploymentTypeNotes" class="form-control" />
                <span asp-validation-for="EmploymentTypeNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script type="text/javascript">
        $(function () {
        if ($("#EmploymentType option:selected").val() != 'Other') {
          $("#EmploymentTypeNotes").hide();
        } else {
         $("#EmploymentTypeNotes").show();
         }
        $("#EmploymentType").on("change", function () {
        if ($("#EmploymentType option:selected").val() != 'Other') {
          $("#EmploymentTypeNotes").hide();
        } else {
         $("#EmploymentTypeNotes").show();
         }
        });
    });
</script>
}
